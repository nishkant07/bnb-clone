<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
    <h3>Add New Listing</h3><br>
    <form enctype="multipart/form-data" method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="listing[title]" placeholder="Add catchy title" class="form-control">
            <div class="valid-feedback">Title Looks Good!</div>
            <div class="invalid-feedback">Title should be valid</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea required class="form-control" name="listing[description]" placeholder="decription"  cols="20" rows="2"></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="url">Upload-Image</label>
            <input class="form-control" type="file" name="listing[image][url]" placeholder="image">
            <div class="invalid-feedback">Image should be valid</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="url">Category</label>
            <select class="form-control" name="listing[category]">
                <option value="">Select</option>
                <option value="Rooms">Rooms</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="Mountain">Mountain</option>
                <option value="Castles">Castles</option>
                <option value="Amazing Pool">Amazing Pool</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Arctic">Arctic</option>
                <option value="Beach">Beach</option>
                <option value="Trending">Trending</option>
            </select>
            <div class="invalid-feedback">category should be valid</div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-4">
            <label class="form-label" for="price">Price</label>
            <input required class="form-control" name="listing[price]" placeholder="1200">
            <div class="invalid-feedback">Price should be valid</div>
        </div>
         <div class=" col-md-8">
            <label class="form-label" for="country">Country</label>
            <input required class="form-control" type="text" name="listing[country]" placeholder="India">
            <div class="invalid-feedback">Country should be valid</div>
        </div > 
        </div>
       
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input required class="form-control" type="text" name="listing[location]" placeholder="Rajesthan,Haryana">
            <div class="invalid-feedback">Location should be valid</div>
        </div>
       
        <button class="btn btn-dark add_btn">add</button><br><br><br>
    </form>
</div>
</div>
</body>
