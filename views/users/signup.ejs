<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h3>SignUp on Wanderlust</h3><br>
        <form novalidate class="needs-validation" method="post" action="/signup">
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input required class="form-control" id="username" type="text" name="username" >
                <div class="valid-feedback">Username Looks Good!</div>
                <div class="invalid-feedback">Username should be valid</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input required class="form-control" id="email" type="text" name="email" >
                <div class="valid-feedback"> Looks Good!</div>
                <div class="invalid-feedback">Email should be valid</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input required class="form-control" id="password" type="password" name="password" >
                <div class="valid-feedback"> Looks Good!</div>
                <div class="invalid-feedback">Password should be valid</div>
            </div>
            <button class="btn btn-success">SignUp</button>
  
        </form>
        </div>
    </div>